<Window x:Class="SpaceShip.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceShip"
        mc:Ignorable="d"
         Title="Space Ships" Height="615" Width="540" Icon="images/player.png">
    <Canvas x:Name="cnv1" Focusable="True" Background="Black" KeyDown="OnKeyDown" KeyUp="OnKeyUp">
        <Rectangle x:Name="player" Height="50" Width="60" Fill="Yellow" Canvas.Left="246" Canvas.Top="498"/>
        <Label Name="scoreText" Content="Score: 0" FontSize="18" FontWeight="Bold" Foreground="White"/>
        <Label Name="damageText" Content="Score: 0" FontSize="18" FontWeight="Bold" Foreground="White" Canvas.Left="402"/>
        <Label Name="levelText" Content="Level: 1" FontSize="18" FontWeight="Bold" Foreground="White" Canvas.Left="198"/>
    </Canvas>
</Window>


